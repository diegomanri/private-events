!!!
%html
  %head
    %title PrivateEvents
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body

    %nav.navbar.navbar-default{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: ".navbar-collapse"}}
            %span.sr-only Toggle navigation
            %span.icon-bar 
            %span.icon-bar 
            %span.icon-bar 
          = link_to "Private Events", root_path, class: "navbar-brand"

        .collapse.navbar-collapse
          %ul.nav.navbar-right.navbar-nav
            %li= link_to "Events", events_path
            - if logged_in?
              %li= link_to "New Event", new_event_path
              %li.dropdown
                %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}}
                  = current_user.name
                  %span.caret
                %ul.dropdown-menu.menu{role: "menu"}
                  %li= link_to "Profile", user_path(current_user)
                  %li= link_to "Log Out", logout_path, method: :delete
            - else
              %li= link_to "Log In", login_path
              %li= link_to "Register", new_user_path

    %div.container
      = yield